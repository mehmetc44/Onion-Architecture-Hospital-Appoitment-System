<div id="rescheduleModal" class="modal">
    <div class="modal-content">
        <span class="close" onclick="closeCustomModal()">&times;</span>
        
        <h3 style="margin-top:0; color:#1e3a8a;">Randevu Ertele</h3>
        <p style="font-size:0.9rem; color:#666;">Lütfen yeni tarih ve saat seçiniz.</p>

        <form asp-controller="HospitalAppointment" asp-action="RescheduleAppointment" method="post" id="rescheduleForm">
            
            <input type="hidden" id="modalDoctorId" />
            <input type="hidden" name="appointmentId" id="modalAppointmentId" />
            
            <div class="form-grid">
                <div>
                    <label style="font-size:0.8rem; font-weight:bold;">Yeni Tarih</label>
                    <input type="date" name="newDate" id="modalDate" required min="@DateTime.Now.ToString("yyyy-MM-dd")">
                </div>
                <div>
                    <label style="font-size:0.8rem; font-weight:bold;">Seçilen Saat</label>
                    <input type="text" name="newTime" id="modalSelectedTime" placeholder="Saat Seçilmedi" readonly required style="background-color: #f3f4f6; cursor: default;">
                </div>
            </div>

            <div style="margin-bottom: 5px; font-size:0.8rem; font-weight:bold;">Müsait Saatler:</div>
            
            <div id="modalTimeDrawer" class="drawer">
                <div id="modalTimeSlots" style="display: flex; flex-wrap: wrap; justify-content: center;">
                    <span class="text-muted small">Lütfen önce tarih seçiniz.</span>
                </div>
            </div>

            <button type="button" onclick="submitReschedule()">Değişiklikleri Onayla</button>
        </form>
    </div>
</div>