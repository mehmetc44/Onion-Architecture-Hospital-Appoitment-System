@{
    ViewData["Title"] = "Şifremi Unuttum";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}

<h1>Şifre Sıfırlama</h1>

<form id="forgotForm">
    <input type="email" placeholder="TC Kimlik No veya E-posta" required>
    <button type="submit">Şifre Sıfırla</button>
    <div class="links">
        <a asp-action="Login">Giriş Yap</a>
        <a asp-action="Register">Kayıt Ol</a>
    </div>
</form>
